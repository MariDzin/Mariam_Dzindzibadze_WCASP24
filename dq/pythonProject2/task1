import pytest
import time

@pytest.fixture(autouse=True)
def track_test_time():
    start_time = time.time()
    yield
    end_time = time.time()
    print(f"\nTest executed in {end_time - start_time:.4f} seconds")

@pytest.fixture(scope="session", autouse=True)
def track_suite_time():
    suite_start_time = time.time()
    yield
    suite_end_time = time.time()
    print(f"\nTest suite executed in {suite_end_time - suite_start_time:.4f} seconds")
def test_addition():
    assert 1 + 1 == 2

def test_multiplication():
    assert 2 * 2 == 4

@pytest.mark.usefixtures("track_suite_time")
def test_subtraction():
    assert 5 - 3 == 2

pytest -s test_fixtures.py
